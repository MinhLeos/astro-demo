---
type user = {
  id: string;
  name: string;
  avatar: string;
};

const response = await fetch(
  `https://64d1e94bf8d60b174361173e.mockapi.io/api/v1/users`
);
const listUsers = await response.json();
---

<div>
  <h2 class="text-cyan-500">List User Astro</h2>
  <div>
    {
      listUsers.map((user: user) => {
        return (
          <div class="flex items-center my-5">
            <img
              class="block w-10 h-10 rounded-full"
              alt={user.name}
              src={user.avatar}
            />
            <p class="text-lg ml-5">{user.name}</p>
          </div>
        );
      })
    }
  </div>
</div>
