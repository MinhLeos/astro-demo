<button
  class="mt-10 border p-4 hover:bg-black hover:text-white active:opacity-75"
  id="openDialog">Astro Open</button
>

<script>
  import { isOpen } from '../store/index';

  // Set the store to true when the button is clicked
  function openDialog() {
    isOpen.set(!isOpen.value);
  }

  // Add an event listener to the button
  document.getElementById('openDialog')?.addEventListener('click', openDialog);
</script>
