---
import AstroButton from '../components/AstroButton.astro';
import AstroDialog from '../components/AstroDialog.astro';
import VueButton from '../components/VueButton.vue';
import VueDialog from '../components/VueDialog.vue';
import SvelteButton from '../components/SvelteButton.svelte';
import SvelteDialog from '../components/SvelteDialog.svelte';
---

<Fragment>
  <h1 class="text-center text-3xl">Nanostore</h1>
  <hr class="my-10" />
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-2xl">Astro Component</h2>
    <AstroButton />
    <AstroDialog />
  </div>
  <hr class="my-10" />
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-2xl">Vue Component</h2>
    <VueButton client:load />
    <VueDialog client:load />
  </div>
  <hr class="my-10" />
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-2xl">Svelte Component</h2>
    <SvelteButton client:load />
    <SvelteDialog client:load />
  </div>
</Fragment>
